<Page x:Class="HeavenUsurperToolkit.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeavenUsurperToolkit"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="800"
      Title="银行家算法">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 间隔 -->
        <Rectangle Height="65" VerticalAlignment="Top"/>

        <!-- 控制面板 -->
        <Grid Grid.Row="2" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧控制区 -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="选择数据集：" FontSize="18" Margin="0,0,0,5" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                <ComboBox x:Name="DataSetSelector" Width="300" Height="30" Margin="0,0,0,10" 
                          SelectionChanged="DataSetSelector_SelectionChanged" HorizontalAlignment="Left" Style="{StaticResource ModernComboBox}"/>
                
                <TextBlock Text="系统资源初始化：" FontSize="18" Margin="0,10,0,5" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="资源类型数量：" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#FF8E6CDC" FontWeight="Bold" FontSize="18"/>
                    <TextBox x:Name="ResourceTypesInput" Width="50" Text="3" Style="{StaticResource ModernTextBox}"/>
                    <Button x:Name="SetResourceTypesButton" Content="设置" Width="80" Margin="10,0,0,0" 
                            Click="SetResourceTypesButton_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>

                <TextBlock Text="进程数量：" FontSize="18" Margin="0,10,0,5" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="ProcessCountInput" Width="50" Text="5" Style="{StaticResource ModernTextBox}"/>
                    <Button x:Name="SetProcessCountButton" Content="设置" Width="80" Margin="10,0,0,0" 
                            Click="SetProcessCountButton_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>

                <TextBlock Text="系统总资源：" FontSize="18" Margin="0,10,0,5" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="AvailableResourcesInput" Style="{StaticResource ModernTextBox}" Width="250"
                             Text="3,3,2" ToolTip="请输入各类资源的总数量，用逗号分隔"/>
                    <Button x:Name="SetAvailableButton" Content="设置" Width="80" Margin="10,0,0,0" 
                            Click="SetAvailableButton_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Height="41">
                    <Button x:Name="ClearDataButton" Content="清空数据" Width="150" Margin="0,0,10,0"
                            Click="ClearDataButton_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="CheckSafetyButton" Content="安全性检查" Width="150" Height="40" 
                        Click="CheckSafetyButton_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </StackPanel>

            <!-- 右侧资源申请区 -->
            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="10,0,0,0" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="资源申请：" FontSize="18" Margin="0,0,0,10" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="进程ID：" VerticalAlignment="Center" Margin="0,0,5,5" FontSize="18" FontWeight="Bold" Foreground="#FF8E6CDC"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ProcessSelector" Margin="0,0,0,5" Style="{StaticResource ModernTextBox}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="请求资源：" VerticalAlignment="Center" Margin="0,0,5,5" Foreground="#FF8E6CDC" FontWeight="Bold" FontSize="18"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="RequestResourcesInput" Margin="0,0,0,5" Style="{StaticResource ModernTextBox}"
                                 ToolTip="请输入请求的各类资源数量，用逗号分隔"/>
                    </Grid>
                    <Button x:Name="RequestResourcesButton" Content="申请资源" HorizontalAlignment="Right" Margin="0,10,0,0" 
                            Width="120" Click="RequestResourcesButton_Click" Style="{StaticResource ModernButton}" Height="40"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 数据和结果显示区域 -->
        <Grid Grid.Row="3" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧资源分配表 -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,10,0" CornerRadius="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="资源分配表" FontSize="18" FontWeight="Bold" Margin="10,5" Foreground="#FF8E6CDC"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Max" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FF8E6CDC"/>
                            <DataGrid x:Name="MaxGrid" AutoGenerateColumns="True" Margin="0,0,0,10" 
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False"
                                      Style="{StaticResource ModernDataGrid}"/>

                            <TextBlock Text="Allocation" FontWeight="Bold" Margin="0,10,0,5" Foreground="#FF8E6CDC"/>
                            <DataGrid x:Name="AllocationGrid" AutoGenerateColumns="True" Margin="0,0,0,10" 
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False"
                                      Style="{StaticResource ModernDataGrid}"/>

                            <TextBlock Text="Need" FontWeight="Bold" Margin="0,10,0,5" Foreground="#FF8E6CDC"/>
                            <DataGrid x:Name="NeedGrid" AutoGenerateColumns="True" Margin="0,0,0,10" 
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                                      Style="{StaticResource ModernDataGrid}"/>

                            <TextBlock Text="Available" FontWeight="Bold" Margin="0,10,0,5" Foreground="#FF8E6CDC"/>
                            <TextBlock x:Name="AvailableResourcesDisplay" Text="" Foreground="#FF8E6CDC" Margin="0,0,0,10"/>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- 右侧结果显示 -->
            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="10,0,0,0" CornerRadius="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="安全性检查结果" FontSize="18" FontWeight="Bold" Margin="10,5" Foreground="#FF8E6CDC"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock x:Name="SafetyResultText" Text="请点击安全性检查按钮进行检查" TextWrapping="Wrap" Foreground="#FF8E6CDC"/>

                            <TextBlock Text="安全序列：" FontWeight="Bold" Margin="0,20,0,5" Foreground="#FF8E6CDC"/>
                            <TextBlock x:Name="SafeSequenceText" Text="" TextWrapping="Wrap" Foreground="#FF8E6CDC"/>

                            <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,20,0,0" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="资源申请结果" FontWeight="Bold" Margin="0,0,0,10" Foreground="#FF8E6CDC"/>
                                    <TextBlock x:Name="RequestResultText" Text="请在上方进行资源申请" TextWrapping="Wrap" Foreground="#FF8E6CDC"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- 导航按钮 -->
        <Button Grid.Row="4" x:Name="BackButton" Content="←" Height="45" Width="45" Margin="10,0,0,10" 
            HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource ModernButton}" 
            FontSize="30" Click="BackButton_Click" />
    </Grid>
</Page>