<Page x:Class="HeavenUsurperToolkit.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeavenUsurperToolkit"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="800"
      Title="进程调度算法">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 间隔 -->
        <Rectangle Height="65" VerticalAlignment="Top"/>

        <!-- 控制面板 -->
        <Grid Grid.Row="2" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧控制区 -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="算法选择：" FontSize="18" Margin="0,0,0,5" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                <ComboBox x:Name="AlgorithmSelector" SelectedIndex="0" Margin="0,0,0,10" Style="{StaticResource ModernComboBox}" Background="#FFF8E6FF">
                    <ComboBoxItem Content="先来先服务(FCFS)"/>
                    <ComboBoxItem Content="短作业优先(SJF)"/>
                </ComboBox>

                <TextBlock Text="数据生成：" FontSize="18" Margin="0,0,0,5" FontWeight="Bold" Foreground="#FF8E6CDC"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Height="41">
                    <Button x:Name="GenerateDataButton" Content="自动生成数据" Width="150" Margin="0,0,10,0" 
                            Click="GenerateDataButton_Click" Style="{StaticResource ModernButton}"/>
                    <Button x:Name="ClearDataButton" Content="清空数据" Width="150" 
                            Click="ClearDataButton_Click" Style="{StaticResource ModernButton}"/>
                </StackPanel>

                <Button x:Name="CalculateButton" Content="计算" Width="134" Height="40" 
                        Click="CalculateButton_Click" Style="{StaticResource ModernButton}"/>
            </StackPanel>

            <!-- 右侧添加进程区 -->
            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="10,0,0,0" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="添加新进程：" FontSize="18" Margin="0,0,0,10" Foreground="#FF8E6CDC" FontWeight="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="进程名称：" VerticalAlignment="Center" Margin="0,0,5,5" FontSize="18" FontWeight="Bold" Foreground="#FF8E6CDC"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ProcessNameInput" Margin="0,0,0,5" Style="{StaticResource ModernTextBox}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="到达时间：" VerticalAlignment="Center" Margin="0,0,5,5" Foreground="#FF8E6CDC" FontWeight="Bold" FontSize="18"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="ArrivalTimeInput" Margin="0,0,0,5" Style="{StaticResource ModernTextBox}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="服务时间：" VerticalAlignment="Center" Margin="0,0,5,5" FontSize="18" FontWeight="Bold" Foreground="#FF8E6CDC"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="ServiceTimeInput" Margin="0,0,0,5" Style="{StaticResource ModernTextBox}"/>
                    </Grid>
                    <Button x:Name="AddProcessButton" Content="添加进程" HorizontalAlignment="Right" Margin="0,10,0,0" 
                            Width="120" Click="AddProcessButton_Click" Style="{StaticResource ModernButton}" Height="40"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 数据和结果显示区域 -->
        <Grid Grid.Row="3" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧进程列表 -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,10,0" CornerRadius="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="进程列表" FontSize="18" FontWeight="Bold" Margin="10,5" Foreground="#FF8E6CDC"/>
                    <ListView x:Name="ProcessListView" Margin="10" Style="{StaticResource ModernListView}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="进程名称" DisplayMemberBinding="{Binding Name}" Width="80"/>
                                <GridViewColumn Header="到达时间" DisplayMemberBinding="{Binding ArrivalTime}" Width="80"/>
                                <GridViewColumn Header="服务时间" DisplayMemberBinding="{Binding ServiceTime}" Width="80"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- 右侧结果显示 -->
            <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="10,0,0,0" CornerRadius="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="计算结果" FontSize="18" FontWeight="Bold" Margin="10,5" Foreground="#FF8E6CDC"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- 甘特图 -->
                            <TextBlock Grid.Row="0" Text="甘特图" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FF8E6CDC"/>
                            <Canvas Grid.Row="1" x:Name="GanttChartCanvas" Height="100" Background="#00000000" Margin="0,0,0,20"/>

                            <!-- 结果表格 -->
                            <TextBlock Grid.Row="2" Text="详细结果" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FF8E6CDC"/>
                            <ListView Grid.Row="3" x:Name="ResultListView" MaxHeight="200" Style="{StaticResource ModernListView}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="进程名称" DisplayMemberBinding="{Binding Name}" Width="70"/>
                                        <GridViewColumn Header="到达时间" DisplayMemberBinding="{Binding ArrivalTime}" Width="70"/>
                                        <GridViewColumn Header="服务时间" DisplayMemberBinding="{Binding ServiceTime}" Width="70"/>
                                        <GridViewColumn Header="开始时间" DisplayMemberBinding="{Binding StartTime}" Width="70"/>
                                        <GridViewColumn Header="完成时间" DisplayMemberBinding="{Binding FinishTime}" Width="70"/>
                                        <GridViewColumn Header="周转时间" DisplayMemberBinding="{Binding TurnaroundTime}" Width="70"/>
                                        <GridViewColumn Header="带权周转时间" DisplayMemberBinding="{Binding WeightedTurnaroundTime}" Width="90"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <!-- 平均值统计 -->
                            <StackPanel Grid.Row="4" Margin="0,20,0,0">
                                <TextBlock Text="统计信息" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FF8E6CDC"/>
                                <TextBlock x:Name="AvgTurnaroundTimeText" Text="平均周转时间：" Foreground="#FF8E6CDC"/>
                                <TextBlock x:Name="AvgWeightedTurnaroundTimeText" Text="平均带权周转时间：" Foreground="#FF8E6CDC"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- 导航按钮 -->
        <Button Grid.Row="4" x:Name="BackButton" Content="←" Height="45" Width="45" Margin="10,0,0,10" 
            HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource ModernButton}" 
            FontSize="30" Click="BackButton_Click" />
    </Grid>
</Page>