<Page x:Class="HeavenUsurperToolkit.LevelCalculator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeavenUsurperToolkit"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="LevelCalculator">

    <Grid>
        <Grid>
            <Rectangle Height="65" VerticalAlignment="Top"/>
            <DataGrid x:Name="MapDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Style="{StaticResource ModernDataGrid}" Margin="10,75,10,65" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="15" AllowDrop="True" Drop="MapDataGrid_Drop">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="Auto">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Foreground" Value="SlateGray" />
                                <Setter Property="Width" Value="Auto" />
                                <Setter Property="Padding" Value="8,5" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="StarRating" Binding="{Binding StarRating}" Width="Auto"/>
                    <DataGridTextColumn Header="OD" Binding="{Binding OD}" Width="Auto"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}" Width="*"/>
                    <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*"/>
                    <DataGridTextColumn Header="Creator" Binding="{Binding Creator}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BackButton" Content="←" Height="45" Width="45" Margin="10,0,0,10" 
            HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource ModernButton}" 
            FontSize="30" Click="BackButton_Click" Grid.Row="8" />
            <TextBlock Margin="0,0,10,20" TextWrapping="Wrap" Foreground="#FF8E6CDC" FontSize="20" FontWeight="Bold" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="157"><Run Language="zh-cn" Text="⬑Drop .osu File"/></TextBlock>
            <Button x:Name="RecalculateButton" Content="Recalculate" Height="45" Margin="0,0,172,10" VerticalAlignment="Bottom" Style="{StaticResource ModernButton}" 
                FontSize="20" Click="RecalculateButton_Click" HorizontalAlignment="Right" Width="170" />
        </Grid>
    </Grid>
</Page>
